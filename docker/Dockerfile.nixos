FROM nixos/nix:latest

# Enable flakes
RUN mkdir -p /etc/nix && \
    echo "experimental-features = nix-command flakes" >> /etc/nix/nix.conf

# Install build dependencies and bash using nix-env
RUN nix-env -iA nixpkgs.gcc nixpkgs.cmake nixpkgs.gnumake nixpkgs.bash

WORKDIR /paclook
COPY CMakeLists.txt .
COPY src/ src/

RUN mkdir build && cd build && \
    cmake .. && \
    make -j$(nproc)

CMD ["bash"]
